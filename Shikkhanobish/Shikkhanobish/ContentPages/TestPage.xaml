                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <BoxView BackgroundColor="#AB81EB" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" CornerRadius="10"/>
