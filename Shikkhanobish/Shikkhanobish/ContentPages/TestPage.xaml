             x:Class="Shikkhanobish.ContentPages.TestPage">

    <Grid BackgroundColor="#E6E6E6" Padding="10" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1**"/>
            <RowDefinition Height="1**"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="1" RowSpacing="0" ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <BoxView BackgroundColor="White" Grid.Row="0" Grid.RowSpan="1" CornerRadius="0"/>
            <Grid Grid.Row="0" Padding="5" RowSpacing="0" Margin="8,0,0,0">
