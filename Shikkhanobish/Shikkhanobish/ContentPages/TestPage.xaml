            </Grid>
            <Grid Grid.Column="1" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <BoxView BackgroundColor="#E4E4E4" Grid.Row="0" Grid.RowSpan="2" CornerRadius="20"/>
