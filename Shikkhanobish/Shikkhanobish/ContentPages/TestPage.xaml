            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Padding="5" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="1*"/>
