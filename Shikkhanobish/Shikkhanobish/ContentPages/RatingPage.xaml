<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:widget="clr-namespace:Android.Widget;assembly=Mono.Android"
             mc:Ignorable="d"
             Title="RatingPage"
             x:Class="Shikkhanobish.ContentPages.RatingPage">
    <Grid RowSpacing="0" BackgroundColor="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height=".7*" />
            <RowDefinition Height=".3*" />
            <RowDefinition Height=".5*" />
            <RowDefinition Height="7*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <BoxView BackgroundColor="#9761FD" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"  />
        <BoxView BackgroundColor="#F2F2F2" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="8"  Margin="0,0,0,5" />
        <Label Text="Rate Your Teacher" FontAttributes="Bold" FontSize="16" TextColor="White" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Center" />
        <Label Text="Teacher Name:" Grid.Column="0" Grid.Row="1" HorizontalOptions="End" VerticalOptions="Center" />
        
        <Button x:Name="rptbtn" Grid.Column="1"  Text="Report Teacher" Grid.Row="1" FontSize="10" HorizontalOptions="End" VerticalOptions="Center" Clicked="Button_Clicked_1" BackgroundColor="#00000000" TextColor="#5178DE" Margin="4"/>
        
        <Label Text="Teacher ID:" Grid.Column="0" Grid.Row="2" HorizontalOptions="End" VerticalOptions="Center" />
        <Label Text="Class:" Grid.Column="0" Grid.Row="3" HorizontalOptions="End" VerticalOptions="Center" />
        <Label Text="Subject:" Grid.Column="0" Grid.Row="4" HorizontalOptions="End" VerticalOptions="Center" />
        <Label Text="Time:" Grid.Column="0" Grid.Row="5" HorizontalOptions="End" VerticalOptions="Center" />
        <Label Text="Cost:" Grid.Column="0" Grid.Row="6" HorizontalOptions="End" VerticalOptions="Center" />

        <Label x:Name="tnamelbl"  Grid.Column="1" Grid.Row="1" HorizontalOptions="Start" VerticalOptions="Center" FontAttributes="Bold"  />
        <Label x:Name="tIDlbl"  Grid.Column="1" Grid.Row="2" HorizontalOptions="Start" VerticalOptions="Center" FontAttributes="Bold" />
        <Label x:Name="sClasslbl"  Grid.Column="1" Grid.Row="3" HorizontalOptions="Start" VerticalOptions="Center" FontAttributes="Bold" />
        <Label x:Name="sSubject"  Grid.Column="1" Grid.Row="4" HorizontalOptions="Start" VerticalOptions="Center" FontAttributes="Bold" />
        <Label x:Name="inapptimelbl"  Grid.Column="1" Grid.Row="5" HorizontalOptions="Start" VerticalOptions="Center" FontAttributes="Bold" />
        <Label x:Name="costlbl"  Grid.Column="1" Grid.Row="6" HorizontalOptions="Start" VerticalOptions="Center" FontAttributes="Bold" />
        <Entry x:Name="voucherentry" Placeholder="Code" Grid.ColumnSpan="2" WidthRequest="100" Grid.Row="7" HorizontalOptions="Center" VerticalOptions="Center" FontSize="14"/>
        <Button x:Name="voucher"  Text="Add Voucher" FontSize="9" Grid.Column="1" Grid.Row="7" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold"  TextColor="#FFFFFF" BackgroundColor="#4BB290" Clicked="voucher_Clicked" CornerRadius="8"/>
        <Label Text="Rate Your Teacher" Grid.Row="9" FontAttributes="Bold" FontSize="15" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Grid Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" RowSpacing="3" BackgroundColor="#FFFFFF">
            <Grid.RowDefinitions>
                <RowDefinition Height=".35*" />
                <RowDefinition Height=".03*" />
                <RowDefinition Height=".2*" />
                <RowDefinition Height=".3*" />
                <RowDefinition Height=".6*" />
                <RowDefinition Height=".5*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            
            <Polygon x:Name="oply" Points="0 10,10 10,15 0,20 10,30 10,23 18,27 30,15 24,3 30, 7 18"
                     StrokeThickness="1"
                     Stroke="#707B7C"
                     StrokeDashOffset="6" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Polygon x:Name="tply" Points="0 10,10 10,15 0,20 10,30 10,23 18,27 30,15 24,3 30, 7 18"
                     StrokeThickness="1"
                     Stroke="#707B7C"
                     StrokeDashOffset="6" Grid.Row="0" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Polygon x:Name="thply" Points="0 10,10 10,15 0,20 10,30 10,23 18,27 30,15 24,3 30, 7 18"
                     StrokeThickness="1"
                     Stroke="#707B7C"
                     StrokeDashOffset="6" Grid.Row="0" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Polygon x:Name="fply" Points="0 10,10 10,15 0,20 10,30 10,23 18,27 30,15 24,3 30, 7 18"
                     StrokeThickness="1"
                     Stroke="#707B7C"
                     StrokeDashOffset="6" Grid.Row="0" Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Polygon x:Name="fiply" Points="0 10,10 10,15 0,20 10,30 10,23 18,27 30,15 24,3 30, 7 18"
                     StrokeThickness="1"
                     Stroke="#707B7C"
                     StrokeDashOffset="6" Grid.Row="0" Grid.Column="4" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button  Grid.Row="0" Grid.Column="0" CornerRadius="10" BackgroundColor="#00755D05" TextColor="#FFFFFF" Clicked="ostarClicked" />
            <Button  Grid.Row="0" Grid.Column="1" CornerRadius="10" BackgroundColor="#0005F0EB" TextColor="#FFFFFF" Clicked="tstarClicked" />
            <Button  Grid.Row="0" Grid.Column="2" CornerRadius="10" BackgroundColor="#0002912A" TextColor="#FFFFFF" Clicked="thstarClicked" />
            <Button  Grid.Row="0" Grid.Column="3" CornerRadius="10" BackgroundColor="#0050B2ED" TextColor="#FFFFFF" Clicked="fstarClicked" />
            <Button  Grid.Row="0" Grid.Column="4" CornerRadius="10" BackgroundColor="#00B161F3" TextColor="#FFFFFF" Clicked="fistarClicked" />
            
            <ProgressBar x:Name="pbar" Grid.Row="1" Grid.ColumnSpan="5" ScaleY="2"/>
            <Label x:Name="Ratelbl" Grid.Row="2" FontAttributes="Bold" FontSize="17" Grid.ColumnSpan="5" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Button x:Name="sbtn" Text="Submit" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" HorizontalOptions="Center" CornerRadius="10" BackgroundColor="#323232" TextColor="#FFFFFF" Clicked="Button_Clicked" />
            <Label Text="To achive perfect teacher evaluation system every student MUST rate their teacher after every tuition. You can report your teacher If you face any unexpeted behaviour" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center" TextColor="#808080" />
            

        </Grid>


        

    </Grid>
</ContentPage>