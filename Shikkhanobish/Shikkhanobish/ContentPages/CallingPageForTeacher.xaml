<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="CallingPageForTeacher"
             x:Class="Shikkhanobish.ContentPages.CallingPageForTeacher">
    <Grid BackgroundColor="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <BoxView BackgroundColor="WhiteSmoke" Grid.Row="0" Grid.RowSpan="5" />
        <BoxView BackgroundColor="#59CFCFCF" Grid.Row="0" Margin="100,15,100,15" CornerRadius="20"/>
        <Label x:Name="tnLbl"  Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#4D4D4D"/>
        <BoxView BackgroundColor="#59CFCFCF" Grid.Row="1" Margin="100,15,100,15" CornerRadius="20"/>
        <Label x:Name="clLbl"  Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#4D4D4D"/>
        <BoxView BackgroundColor="#59CFCFCF" Grid.Row="2" Margin="100,15,100,15" CornerRadius="20" />
        <Label x:Name="subLbl" Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#4D4D4D"/>
        <BoxView BackgroundColor="#59CFCFCF" Grid.Row="3" Margin="100,15,100,15" CornerRadius="20"/>
        <Label  x:Name="ctLbl"  Grid.Row="3" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#4D4D4D"/>
        <Label x:Name="shortnotelbl" Grid.Row="4" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Label x:Name="calllbl" Text="Calling..."  Grid.Row="5" HorizontalOptions="Center" FontSize="17" VerticalOptions="Center" TextColor="#303030"/>
        <Button x:Name="acceptbtn" Text="Accept"  Grid.Row="5" HorizontalOptions="Start" FontSize="13" FontAttributes="Bold" VerticalOptions="End" TextColor="#FFFFFF" Clicked="callbtn_Clicked" Margin="15" CornerRadius="10" BackgroundColor="#49DA76"/>
        <Button x:Name="canclebtn" Text="Cacle"  Grid.Row="5" HorizontalOptions="End" FontSize="13" FontAttributes="Bold" VerticalOptions="End" TextColor="#FFFFFF" Clicked="canclebtn_Clicked" Margin="15" CornerRadius="10" BackgroundColor="#DA4949"/> 


    </Grid>
</ContentPage>